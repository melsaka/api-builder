    /**
     * Upload image based on supported {{modelVariable}} image types.
     * This method validates the request data [image and it's types]
     * and uses the {{model}}Service to update images of the specified {{modelVariable}}.
     * It returns the {{modelVariable}} with the updated images as a {{model}}Resource.
     *
     * @param \Illuminate\Http\Request $request
     * @param \App\Models\{{model}} ${{modelVariable}}
     * @return \Illuminate\Http\JsonResponse
     */
    public function uploadImage(Request $request, {{model}} ${{modelVariable}})
    {
        $validations = [
            'type' => 'required|in:{{supportedImagesString}}',
            'image' => 'required|image|max:3072',
        ];

        if ($request->has('images')) {
            unset($validations['image']);
            $validations['images'] = 'required|array|min:1|max:10';
            $validations['images.*'] = 'required|image|max:3072';
        }
        
        $request->validate($validations);

        // Ensure the authenticated user has permission to upload image to the {{modelVariable}}.
        // $this->isAbleTo('uploadImage', ${{modelVariable}});

        ${{modelVariable}} = $this->service->uploadImage($request, ${{modelVariable}});

        return $this->apiOk(
            __('{{model}}') . __(' images updated successfully'),
            new {{model}}Resource(${{modelVariable}})
        );
    }

    /**
