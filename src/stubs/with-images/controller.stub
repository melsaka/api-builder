     * It returns the {{modelVariable}} with it's images after deletion as a {{model}}Resource.
     *
     * @param \Illuminate\Http\Request $request
     * @param \App\Models\{{model}} ${{modelVariable}}
     * @return \Illuminate\Http\JsonResponse
     */
    public function deleteImage(Request $request, {{model}} ${{modelVariable}})
    {
        $request->validate([
            'type'      => 'required|in:{{supportedImagesString}}',
            'names'     => 'required|array',
            'names.*'   => 'required|string',
        ]);

        // Ensure the authenticated user has permission to delete the {{modelVariable}}.
        // $this->isAbleTo('deleteImage', ${{modelVariable}});

        if ($this->service->deleteImage($request, ${{modelVariable}})) {
            return $this->apiNoContent();
        }

        $message = __('{{model}}') . __(' does not have ') . $request->input('type') . __(' images with these names: ') . implode(', ', $request->input('names'));
        
        return $this->apiUnprocessableEntity($message, [
            'names' => $message
        ]);
    }
